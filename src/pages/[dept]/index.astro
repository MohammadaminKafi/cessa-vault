---
import Layout from '../../layouts/Layout.astro';
import MaterialBrowser from '../../components/MaterialBrowser';
import { scanDataDirectory, getDepartmentMaterials, getDeptDisplayName } from '../../utils/dataScanner';

export async function getStaticPaths() {
  const departments = scanDataDirectory();
  
  return departments.map(dept => ({
    params: { dept },
  }));
}

const { dept } = Astro.params;
const materials = getDepartmentMaterials(dept);
const deptDisplayName = getDeptDisplayName(dept);
---

<Layout title={`${deptDisplayName} Department`} description={`Browse ${deptDisplayName} course materials`}>
  <div class="page-header-bg">
    <div class="container page-header-content">
      <div class="breadcrumb">
        <a href={import.meta.env.BASE_URL}>ðŸ“š CESSA Vault</a>
        <span class="separator">â€º</span>
        <span class="current">{deptDisplayName}</span>
      </div>

      <div class="page-header">
        <div class="header-icon">ðŸŽ“</div>
        <div class="header-text">
          <h1 class="page-title">{deptDisplayName}</h1>
          <p class="page-description">
            Browse and search through all available course materials for the {deptDisplayName} department.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="container main-content">
    {materials.length === 0 ? (
      <div class="empty-state">
        <div class="empty-icon">ðŸ“š</div>
        <h2>No Materials Available</h2>
        <p>There are currently no materials available for this department.</p>
        <p class="empty-path">Materials should be organized in: <code>public/data/{dept}/course/instructor/type/</code></p>
      </div>
    ) : (
      <MaterialBrowser client:load materials={materials} baseUrl={import.meta.env.BASE_URL} />
    )}
  </div>
</Layout>

<style>
  .page-header-bg {
    background: var(--gradient-card);
    border-bottom: 2px solid var(--border-light);
    padding: var(--spacing-xl) 0 var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  .page-header-content {
    max-width: 1200px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .breadcrumb a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-base);
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius);
    background: var(--surface-elevated);
  }

  .breadcrumb a:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-1px);
  }

  .separator {
    color: var(--text-tertiary);
    font-weight: 600;
  }

  .current {
    color: var(--text-primary);
    font-weight: 700;
    padding: 0.375rem 0.75rem;
    background: var(--accent-200);
    border-radius: var(--radius);
  }

  .page-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
  }

  .header-icon {
    font-size: 4rem;
    background: var(--gradient-primary);
    width: 5rem;
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    flex-shrink: 0;
  }

  .header-text {
    flex: 1;
  }

  .page-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .main-content {
    padding-bottom: var(--spacing-3xl);
  }

  .empty-state {
    background: var(--gradient-card);
    border: 2px dashed var(--border);
    border-radius: var(--radius-xl);
    padding: var(--spacing-3xl);
    text-align: center;
    color: var(--text-secondary);
    box-shadow: var(--shadow);
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.5;
  }

  .empty-state h2 {
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .empty-state p {
    margin-bottom: var(--spacing-sm);
    font-size: 1.05rem;
  }

  .empty-path {
    margin-top: var(--spacing-lg);
    padding: var(--spacing-md);
    background: var(--surface-elevated);
    border-radius: var(--radius);
    border: 1px solid var(--border);
  }

  .empty-state code {
    background: var(--primary-100);
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    color: var(--primary-700);
    font-size: 0.9rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }

    .header-icon {
      width: 4rem;
      height: 4rem;
      font-size: 3rem;
    }

    .page-header-bg {
      padding: var(--spacing-lg) 0 var(--spacing-xl);
    }

    .breadcrumb {
      justify-content: center;
    }
  }
</style>
