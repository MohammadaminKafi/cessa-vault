---
import Layout from '../../../../layouts/Layout.astro';
import FileList from '../../../../components/FileList';
import { scanDataDirectory, getDepartmentCourses, getMaterialsAtPath, getCourseDisplayName, getInstructorDisplayName, getDeptDisplayName } from '../../../../utils/dataScanner';

export async function getStaticPaths() {
  const departments = scanDataDirectory();
  const paths: any[] = [];

  for (const dept of departments) {
    const courses = getDepartmentCourses(dept);
    
    for (const course of courses) {
      const coursePath = `../public/data/${dept}/${course}`;
      const fs = await import('fs');
      const path = await import('path');
      
      if (fs.existsSync(coursePath)) {
        const instructors = fs.readdirSync(coursePath, { withFileTypes: true })
          .filter(dirent => dirent.isDirectory());
        
        for (const instructor of instructors) {
          const instructorPath = path.join(coursePath, instructor.name);
          const types = fs.readdirSync(instructorPath, { withFileTypes: true })
            .filter(dirent => dirent.isDirectory());
          
          for (const type of types) {
            paths.push({
              params: {
                dept,
                course,
                instructor: instructor.name,
                type: type.name
              }
            });
          }
        }
      }
    }
  }

  return paths;
}

const { dept, course, instructor, type } = Astro.params;
const files = getMaterialsAtPath(dept, course, instructor, type);

const deptDisplayName = getDeptDisplayName(dept);
const courseDisplayName = getCourseDisplayName(dept, course);
const instructorDisplayName = getInstructorDisplayName(dept, instructor);
